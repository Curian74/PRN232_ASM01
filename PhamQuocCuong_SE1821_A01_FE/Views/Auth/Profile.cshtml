@model EditAccountDto

<h2>Edit Profile</h2>

<form asp-action="Profile" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Hidden field for AccountId -->
    <input asp-for="AccountId" type="hidden" />
    <input asp-for="AccountEmail" type="hidden" />

    <div class="form-group w-25">
        <label asp-for="AccountName" class="control-label"></label>
        <input asp-for="AccountName" class="form-control" />
        <span asp-validation-for="AccountName" class="text-danger"></span>
    </div>

    <div class="form-group w-25">
        <label asp-for="AccountEmail" class="control-label"></label>
        <input asp-for="AccountEmail" class="form-control" type="email" disabled />
        <span asp-validation-for="AccountEmail" class="text-danger"></span>
    </div>

    <div class="form-group w-25">
        <label asp-for="OldPassword" class="control-label"></label>
        <input asp-for="OldPassword" class="form-control" type="password" />
        <span asp-validation-for="OldPassword" class="text-danger"></span>
    </div>

    <div class="form-group w-25">
        <label asp-for="AccountPassword" class="control-label"></label>
        <input asp-for="AccountPassword" class="form-control" type="password" />
        <span asp-validation-for="AccountPassword" class="text-danger"></span>
    </div>

    <div class="form-group w-25 mb-3">
        <label asp-for="ConfirmPass" class="control-label"></label>
        <input asp-for="ConfirmPass" class="form-control" type="password" />
        <span asp-validation-for="ConfirmPass" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a onclick="window.history.back()" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        @if (TempData["success"] != null)
        {
            <text>
                        alert("@TempData["success"]");
                        window.history.go(-2);
            </text>
        }
    </script>
}
