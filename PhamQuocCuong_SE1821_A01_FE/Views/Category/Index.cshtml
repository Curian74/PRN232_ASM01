@model PagedResult<CategoryDto>

@{
    ViewData["Title"] = "Category List";
}

<h2 class="mb-4 text-center">Category List</h2>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" class="btn btn-success">Create new</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Is Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Items != null && Model.Items.Any())
        {
            foreach (var c in Model.Items)
            {
                <tr>
                    <td>@c.CategoryId</td>
                    <td>@c.CategoryName</td>
                    <td>@c.IsActive</td>
                    <td>
                        <a asp-route-id="@c.CategoryId" asp-action="Edit" class="btn btn-primary">Edit</a>
                        <a asp-route-id="@c.CategoryId" asp-action="Delete"
                           class="btn btn-danger"
                           onclick="return confirm('Are you sure you want to delete this category?');">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">No categories found.</td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination Controls -->
<nav class="mt-4">
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pageIndex = i, pageSize = Model.PageSize })">@i</a>
            </li>
        }
    </ul>
</nav>
